<style>
body {
  font-family: Arial, sans-serif;
  background-color: #f7f7f7;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
}

.login-form-container {
  background-color: white;
  padding: 30px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  max-width: 400px;
  width: 100%;
}

.login-heading {
  text-align: center;
  color: #333;
  margin-bottom: 20px;
  font-size: 24px;
  font-weight: bold;
}

.form-input {
  width: 100%;
  padding: 10px;
  margin: 10px 0;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
}

.submit-btn {
  width: 100%;
  padding: 10px;
  background-color: #007bff;
  border: none;
  border-radius: 5px;
  color: white;
  font-size: 16px;
  cursor: pointer;
}

.submit-btn:hover {
  background-color: #0056b3;
}

.remember-me-checkbox {
  margin-right: 5px;
}

.remember-me-label {
  font-size: 14px;
  color: #555;
}

.actions {
  text-align: center;
}

.devise-links {
  text-align: center;
  margin-top: 20px;
}

.devise-links a {
  color: #007bff;
  text-decoration: none;
}

.devise-links a:hover {
  text-decoration: underline;
}

</style>

<div class="login-form-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "remember-me-checkbox" %>
        <%= f.label :remember_me, class: "remember-me-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
